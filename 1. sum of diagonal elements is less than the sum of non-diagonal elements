#include<stdio.h>

int main()
{
	int n;
	printf("Enter Dimension");
	scanf("%d",&n);
	int array[n][n];
	int sum = 0;
	printf("Enter your 2D array");
	for(int i = 0;i<n;i++)
	{
		scanf("%d",&array[i][i]);
		sum = sum + array[i][i];
	}
	int x=1;
	while(x*(n*n-n)<=sum)
	x++;
	for(int i = 0;i<n;i++)
	{
		for(int j = 0;j<n;j++)
		{
			if(i!=j)
			array[i][j] = x;	
			printf("%d ",array[i][j]);
		}
		printf("\n");
	}
}
